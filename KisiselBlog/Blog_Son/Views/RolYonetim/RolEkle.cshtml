@model Blog_Son.Models.RolEkleModel
@{
    ViewBag.Title = "RolEkle";
}

<div class="row" style="text-align:center;">
    <h2>@Resources.HomeLan.RolEkle</h2>
    <hr />
</div>
@using (Html.BeginForm("RolEkle", "RolYonetim", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Rol Adı : ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.RolAd, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <br /><br />
    <input type="submit" value="@Resources.HomeLan.Ekle" style="margin-left:100px;" />
}
<br /><br />
