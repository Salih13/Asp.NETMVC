@model Blog_Son.Models.Makale
@{
    ViewBag.Title = "Makaleyaz";
}

<div class="contact-form">
    <div class="row" style="text-align:center;">
        <h2>@Resources.HomeLan.MakaleYaz</h2>
        <hr />
    </div>
    <br />
    @using (Html.BeginForm(@*"Makaleyaz", "Yonetim", FormMethod.Post, new { enctype = "multipart/form-data" }*@))
    {
        @Html.AntiForgeryToken()
        <div>*@Resources.HomeLan.Virgul</div>
        <div class="form-horizontal">
            <div class="text-danger">
                @ViewBag.Mesaj
            </div>         
            <div>
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Baslik, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Kategori", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select name="KategoriID" class="form-control">
                        @foreach (var kategori in ViewBag.Kategoriler)
                {
                            <option value="@kategori.Id">@kategori.Adi</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Etiket", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" class="form-control" name="etiketler" id="subject">
                </div>
            </div>

            
                <textarea rows="6" placeholder="@Resources.HomeLan.MakaYaz" class="form-control" name="Icerik" id="message"></textarea>
          
            <br />

            <div id="submit" class="wow fadeInDown" data-wow-duration="500ms" data-wow-delay="1.4s">
                <input type="submit" name="btnEkle" id="contact-submit" class="btn btn-default btn-send" value="@Resources.HomeLan.Yayinla">
            </div>       
            <br />
        </div>
    }