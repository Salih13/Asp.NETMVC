@model IEnumerable<Blog_Son.Models.Makale>

@{
    ViewBag.Title = "TumMakaleler";
}

<div class="row" style="text-align:center; ">
    <h2>@Resources.HomeLan.Makaleler</h2>
    <hr />
</div>
<p>
    @Html.ActionLink(Resources.HomeLan.MakaleYaz, "MakaleYaz","Yonetim")
</p>
<table class="table" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>       
        <th>
            @Html.DisplayNameFor(model => model.YayimTarihi)
        </th>       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Baslik)
        </td>       
        <td>
            @Html.DisplayFor(modelItem => item.YayimTarihi)
        </td>     
        <td>          
            @Html.ActionLink(Resources.HomeLan.Sil, "MakaleSil", new {  id=item.Id  })
        </td>
    </tr>
}

</table>
